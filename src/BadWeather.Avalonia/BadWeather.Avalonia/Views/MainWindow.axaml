<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:BadWeather.Avalonia.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:BadWeather.Avalonia.Views"
		xmlns:vmd="clr-namespace:BadWeather.Designer;assembly=BadWeather"
        mc:Ignorable="d"
		d:DesignWidth="800" d:DesignHeight="450"
        x:Class="BadWeather.Avalonia.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="BadWeather">

	<Design.DataContext>
		<vmd:DesignTimeMainViewModel/>
	</Design.DataContext>

	<views:MainView DataContext="{Binding}"/>

</Window>
